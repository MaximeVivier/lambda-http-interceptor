{
  "compilerOptions": {
    "baseUrl": "lib",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node", // Not really understood all errors coming from removing this line
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["lib/**/*"]
}
